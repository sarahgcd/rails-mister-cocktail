<div class="container mt-5">
  <h1>Cocktails 🍸</h1>
  <div class="cards infos-list mt-5">
      <% @cocktails.each do |cocktail| %>

        <div class="card-category"
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.photo.present? ? cl_image_path(cocktail.photo) : image_path('default_cocktail.jpg') %>);">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
        </div>
      <% end %>
      <br>
    </div>
      <%= link_to 'Add a new cocktail', new_cocktail_path, class: 'btn btn-primary mt-5'%>
</div>
